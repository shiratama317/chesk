<header class="header-custom d-flex flex-wrap justify-content-between align-items-center p-3 border-bottom">
  <a href="/">
    <%= image_tag "logo.png",alt: "logo", size: '150x40', class:"d-inline-block align-center ps-1" %>
  </a>
  <% if user_signed_in? %>
    <div class="btn nav-item"><a class="btn logout-color" href="#">ログアウト</a></div>
  <% else %>
    <div class="btn nav-item"><%= link_to "登録する", new_user_registration_path, class: "btn logout-color" %></div>
  <% end %>
</header>