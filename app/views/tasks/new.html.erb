<%= render "share/header" %>
<main class="d-flex flex-column flex-grow-1 p-3">
  <div class="my-4">
    <h1 class="text-center">
      <%= image_tag "home-icon.png",alt: "...", size: '40x40', class:"d-inline-block align-center me-1 mb-1"%>
      タスク管理
    </h1>
  </div>

  <div class="main-index rounded-5 p-4 p-sm-5 mx-auto mb-5">
    <div class="current-user-name"><%= current_user.nickname %></div>

    <h4 class="text-center mt-2">タスクの一覧</h4>
    <div class="task-index p-1">
      <% if @tasks.present? %>
        <% @categories.each do |category| %>
          <% if @tasks.where(category_id: category.id).present? %>
            <h5><%= category.name %></h5>
            <ul>
              <%= @tasks.where(category_id: categpry.id).each do |task| %>
                <li><%= task.content %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      <% else %>
        <p class="text-center">---タスクが作成されていません---</p>
      <% end %>
    </div>

    <div class="new-task-form mt-2">
      <h4 class="text-center mb-2">タスクを作成する</h4>
      <%= form_with model: [@family, @task], local: true do |f| %>
        <%= render 'share/error_messages', model: f.object %>

          <label class="fw-semibold w-100">
            カテゴリーを選択してください
            <%= f.collection_select :category_id, Category.all, :id, :name, {}, {class: "form-select"} %>
          </label>

          <label class="fw-semibold w-100">
            タスク内容を入力してください
            <%= f.text_field :content, class: "form-control" %>
          </label>

        <div class="mt-3"><%= f.submit '作成する', class: "btn link-btn w-100 p-2 fw-semibold" %></div>
      <% end %>
    </div>
  </div>
</main>

<%= render "share/footer" %>