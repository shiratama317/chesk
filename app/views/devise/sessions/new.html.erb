<%= render "share/header" %>

<main class="d-flex flex-grow-1 align-items-center">
  <div class="form-signin main-index w-100 m-auto rounded-5 p-5">
    <%= form_with model: @user, url: user_session_path, class: 'registration-form text-center', local: true do |f| %>
      <%= image_tag "logo.png", size: '150x40' %>
      <h4 class="my-3 text-nowrap fw-normal">サインインして下さい</h4>

      <div class="form-floating">
        <%= f.email_field :email, class:"form-control mb-1", id:"floatingInput", placeholder:"Emailアドレス" %>
        <label for="floatingInput">Emailアドレス</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class:"form-control mb-1", id:"floatingPassword", placeholder:"パスワード" %>
        <label for="floatingPassword">パスワード</label>
      </div>

      <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
          状態を記憶する
        </label>
      </div>
      <button class="btn btn-primary w-100 py-2" type="submit">サインイン</button>
      ※未登録の方は登録ボタンへ
   <% end %>
  </div>
</main>
