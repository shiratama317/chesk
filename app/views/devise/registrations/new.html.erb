<%= render "share/header" %>

<div class="d-flex flex-grow-1 align-items-center">
  <main class="form-signin main-index w-100 m-auto rounded-5 p-5">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-form text-center', local: true do |f| %>
      <%= image_tag "logo.png", size: '150x40' %>
      <h4 class="my-3 text-nowrap fw-normal">サインアップして下さい</h4>
      
      <div class="form-floating">
        <%= f.text_field :nickname, class:"form-control mb-1", id:"floatingNickname", placeholder:"ニックネーム", maxlength:"8" %>
        <label for="floatingNickname">ニックネーム（８文字以内）</label>
      </div>
      <div class="form-floating">
        <%= f.email_field :email, class:"form-control mb-1", id:"floatingInput", placeholder:"Emailアドレス" %>
        <label for="floatingInput">Emailアドレス</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class:"form-control mb-1", id:"floatingPassword", placeholder:"パスワード" %>
        <label for="floatingPassword">パスワード</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password_confirmation, class:"form-control", id:"floatingPasswordConfirmation", placeholder:"パスワード確認用" %>
        <label for="floatingPasswordConfirmation">パスワード確認用</label>
      </div>

      <button class="btn btn-primary w-100 py-2 mt-3" type="submit">サインアップ</button>
    <% end %>
  </main>
</div>