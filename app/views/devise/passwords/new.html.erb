<%= render "share/header" %>

<main class="d-flex flex-column flex-grow-1 ">
  <div class="my-4">
    <h1 class="text-center">
      <i class="bi bi-wrench-adjustable-circle-fill text-warning me-1"></i>
      パスワードの再設定
    </h1>
  </div>

  <div class="main-index rounded-5 p-4 p-sm-5 mx-auto mb-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :ご登録のメールアドレス, class: "translatable-text" %>
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "パスワード再設定用リンクを送信", class: "btn link-btn" %>
      </div>

    <% end %>
  </div>
</main>