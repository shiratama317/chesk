<%= render "share/header" %>

<main class="d-flex flex-column flex-grow-1 ">
  <div class="my-4">
    <h1 class="text-center">
      <i class="bi bi-wrench-adjustable-circle-fill text-warning me-1"></i>
      パスワードの再設定
    </h1>
  </div>

  <div class="main-index rounded-5 p-4 p-sm-5 mx-auto mb-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :新しいパスワード, class: "translatable-text" %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
        <% end %>
        <%= f.password_field :password, autofocus: true, class: "form-control" %>
      </div>

      <div class="field mt-3">
        <%= f.label :新しいパスワード（確認用）, class: "translatable-text" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "変更する", class: "btn link-btn w-100" %>
      </div>
    <% end %>
  </div>
</main>